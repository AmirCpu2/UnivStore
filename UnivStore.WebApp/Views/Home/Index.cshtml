@{
    ViewBag.Title = "UnivStore";
    Layout = "~/Views/Shared/Layouts/_Layout_heder.cshtml";
}
        <!--************************************
                        Home Slider Start
        *************************************-->
        <div id="tg-homebanner" class="tg-homebanner tg-haslayout">
            <figure class="item" data-vide-bg="poster: ../../images/slider/img-01.jpg" data-vide-options="position: 50% 50%">
                <figcaption>
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="tg-bannercontent">
                                    <h1>دنبال چیزی میگردی؟!</h1>
                                    <h2>بگو تا برات جستجو کنم!</h2>
                                    <form class="tg-formtheme tg-formbannersearch">
                                        <fieldset>
                                            <div class="form-group tg-inputwithicon">
                                                <i class="icon-bullhorn"></i>
                                                <input type="text" name="customword" class="form-control" placeholder="جستجو">
                                            </div>
                                            <div class="form-group tg-inputwithicon">
                                                <i class="icon-location"></i>
                                                <a class="tg-btnsharelocation fa fa-crosshairs" href="javascript:void(0);"></a>
                                                <input type="text" name="yourlocation" class="form-control" placeholder="مکان شما">
                                            </div>
                                            <div class="form-group tg-inputwithicon">
                                                <i class="icon-layers"></i>
                                                <div class="tg-select">
                                                    <select>
                                                        <option value="none">مقطع دانشگاهی</option>
                                                        <option value="none">همه مقاطع </option>
                                                        <option value="none">کاردانی </option>
                                                        <option value="none">کارشناسی </option>
                                                        <option value="none">کارشناسی ارشد </option>
                                                        <option value="none">دکترا </option>

                                                    </select>
                                                </div>
                                            </div>
                                            <button class="tg-btn" type="button">جستجو</button>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </figcaption>
            </figure>
        </div>
        <!--************************************
                        Home Slider End
        *************************************-->
        <!--************************************
                        Main Start
        *************************************-->
        <main id="tg-main" class="tg-main tg-haslayout">
            <!--************************************
                    Categories Search Start
            *************************************-->
            <section class="tg-haslayout">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-push-1 col-lg-10">
                            <div class="tg-categoriessearch">
                                <div class="tg-title">
                                    <h2><span>جستجو</span> دسته بندی ها</h2>
                                </div>
                                <div id="tg-categoriesslider" class="tg-categoriesslider tg-categories owl-carousel">
                                    <div class="tg-category">
                                        <div class="tg-categoryholder">
                                            <figure><img src="~/images/icons/img-08.png" alt="توضیح عکس"></figure>
                                            <h3>دسته 1</h3>
                                        </div>
                                    </div>
                                    <div class="tg-category">
                                        <div class="tg-categoryholder">
                                            <figure><img src="~/images/icons/img-09.png" alt="توضیح عکس"></figure>
                                            <h3>دسته 2</h3>
                                        </div>
                                    </div>
                                    <div class="tg-category">
                                        <div class="tg-categoryholder">
                                            <figure><img src="~/images/icons/img-10.png" alt="توضیح عکس"></figure>
                                            <h3>دسته 3</h3>
                                        </div>
                                    </div>
                                    <div class="tg-category">
                                        <div class="tg-categoryholder">
                                            <figure><img src="~/images/icons/img-11.png" alt="توضیح عکس"></figure>
                                            <h3>دسته 4</h3>
                                        </div>
                                    </div>
                                    <div class="tg-category">
                                        <div class="tg-categoryholder">
                                            <figure><img src="~/images/icons/img-12.png" alt="توضیح عکس"></figure>
                                            <h3>دسته 5</h3>
                                        </div>
                                    </div>
                                    <div class="tg-category">
                                        <div class="tg-categoryholder">
                                            <figure><img src="~/images/icons/img-13.png" alt="توضیح عکس"></figure>
                                            <h3>دسته 6</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            
            <!--************************************
                            Categories Search End
            *************************************-->
            <!--************************************
                            Featured Ads Start
            *************************************-->
            @Html.Partial("~/Views/shared/Partials/_BestPay_partial.cshtml")
            <!--************************************
                            Featured Ads End
            *************************************-->
            <!--************************************
                            آخرین آگهی ها Start
            *************************************-->
            @Html.Partial("~/Views/shared/Partials/_LastPay_partial.cshtml")
            <!--************************************
                            آخرین آگهی ها End
            *************************************-->
            <!--************************************
                            News Article Start
            *************************************-->
            @Html.Partial("~/Views/shared/Partials/_Article_partial.cshtml")
            <!--************************************
                            News Article End
            *************************************-->
            <!--************************************
                            Testimonials Start
            *************************************-->
            @Html.Partial("~/Views/shared/Partials/_StarUserList_partial.cshtml")
            <!--************************************
                            Testimonials End
            *************************************-->
            <!--************************************
                            Partners Start
            *************************************-->
            <section class="tg-sectionspace tg-haslayout">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div id="tg-brandsslider" class="tg-brands tg-brandsslider owl-carousel">
                                <figure class="item"><img src="~/images/brands/img-01.png" alt="توضیح عکس"></figure>
                                <figure class="item"><img src="~/images/brands/img-02.png" alt="توضیح عکس"></figure>
                                <figure class="item"><img src="~/images/brands/img-03.png" alt="توضیح عکس"></figure>
                                <figure class="item"><img src="~/images/brands/img-04.png" alt="توضیح عکس"></figure>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--************************************
                            Partners End
            *************************************-->
        </main>
        <!--************************************
                        Main End
        *************************************-->
        